{
    "name": "ibexa/graphql",
    "description": "GraphQL server for Ibexa",
    "type": "ibexa-bundle",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Bertrand Dunogier",
            "email": "bertrand.dunogier@ibexa.co"
        }
    ],
    "replace": {
        "ezsystems/ezplatform-graphql": "*",
        "bdunogier/ezplatform-graphql-bundle": "self.version"
    },
    "require": {
        "php": " >=8.3",
        "ext-dom": "*",
        "erusev/parsedown": "^1.7",
        "ibexa/admin-ui": "~5.0@rc",
        "ibexa/core": "~5.0@rc",
        "ibexa/fieldtype-richtext": "~5.0@rc",
        "ibexa/rest": "~5.0@rc",
        "lexik/jwt-authentication-bundle": "^2.8",
        "overblog/graphql-bundle": "^1.6.0",
        "symfony/config": "^7.2",
        "symfony/console": "^7.2",
        "symfony/dependency-injection": "^7.2",
        "symfony/filesystem": "^7.2",
        "symfony/http-foundation": "^7.2",
        "symfony/http-kernel": "^7.2",
        "symfony/serializer": "^7.2",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "ibexa/code-style": "~2.0.0",
        "ibexa/content-forms": "~5.0@rc",
        "ibexa/design-engine": "~5.0@rc",
        "ibexa/doctrine-schema": "~5.0@rc",
        "ibexa/http-cache": "~5.0@rc",
        "ibexa/notifications": "~5.0@rc",
        "ibexa/rector": "~5.0@rc",
        "ibexa/search": "~5.0@rc",
        "ibexa/twig-components": "~5.0@rc",
        "ibexa/user": "~5.0@rc",
        "mikey179/vfsstream": "^1.6",
        "overblog/graphiql-bundle": "^1.0",
        "phpspec/phpspec": "^7.1",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-symfony": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ibexa\\GraphQL\\": "src/lib/",
            "Ibexa\\Bundle\\GraphQL\\": "src/bundle/",
            "Ibexa\\Contracts\\GraphQL\\": "src/contracts/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Ibexa\\GraphQL\\": "spec/",
            "Ibexa\\Spec\\GraphQL\\": "spec/",
            "Ibexa\\Tests\\Bundle\\GraphQL\\": "tests/bundle/",
            "Ibexa\\Tests\\GraphQL\\": "tests/lib/",
            "spec\\EzSystems\\EzPlatformGraphQL\\Tools\\": "spec/Tools",
            "spec\\EzSystems\\EzPlatformGraphQL\\": "spec/EzSystems/EzPlatformGraphQL"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "5.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": false,
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "php-cs-fixer fix --config=.php-cs-fixer.php -v --show-progress=dots",
        "check-cs": "@fix-cs --dry-run",
        "test": "phpspec run --format=pretty",
        "phpstan": "phpstan analyse"
    }
}